{
  "manifest_version": 2,

  "name": "Aggressive Task Manager",
  "description": "This extension bugs users to keep on task, and minimize distraction and procrastination.",
  "version": "2.0",

  "browser_action": {
    "default_icon": "Rattled Rob Extension Logo.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

   "content_scripts": [
  {
    "matches": [
      "https://www.facebook.com/*", "http://www.facebook.com/*", "https://www.youtube.com/*", "http://www.youtube.com/*"
    ],
    "js": ["content.js"]
  }
]
}